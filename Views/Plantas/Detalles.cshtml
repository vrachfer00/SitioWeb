@model SitioWeb.Models.PlantasTotalModel

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <h3 style="font-style:italic"> @Html.DisplayFor(model => model.NombreCientifico)</h3><hr />

    <div style="position: absolute; margin-left:530px; margin-top:40px">
        @if (Model != null && !String.IsNullOrEmpty(Model.Imagen))
        {
            <img src="@Html.DisplayFor(model => model.tipoImagen), @Html.DisplayFor(model => model.Imagen)" width="400" height="400" style="border: 2px solid #000000" alt="Foto">

        }
        else
        {
            <div class="col text-center">
                <img src="https://denac-public.s3.amazonaws.com/assets/img/catalog/thumbnails/accesorios/iluminacion/cuartos/nissan/00418081r.png" width="400" height="400" alt="Sin Foto">
            </div>
        }

    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Nombre científico</label>
        </dt>
        <dd class="col-sm-10" style="font-style:italic">
            @Html.DisplayFor(model => model.NombreCientifico)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Género</label>
        </dt>
        <dd class="col-sm-10" style="font-style:italic">
            @Html.DisplayFor(model => model.GeneroHosp)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Nombre común</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreComun)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subfamilia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subfamilia)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Tipo de hojas</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoHojas)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Morfología de hojas</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MorfoHojas)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Posición de hojas</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PosHojas)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Posición de foliolos</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PosFoliolos)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Color de flor</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ColorFlor)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Tipo de flor</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoFlor)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Número de pétalos</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Petalos)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Presencia de espinas</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Espinas)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Amenazado</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amenazado)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Color de la raíz</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ColorRaiz)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Simbionte</label>
        </dt>
        <dd class="col-sm-10" style="font-style:italic">
            @Html.DisplayFor(model => model.Simbionte)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Nodulación</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nodula)
        </dd>
    </dl>
</div>

@if (Model.Nodula == "Si")
        {
            var item = Model.ID;
            var nodula = Model.Nodula;

    <div style="position: absolute; margin-left:610px; margin-top:-50px" id="BotonNodula">
        <a asp-action="GuardarNodulo" asp-controller="Plantas" class="btn btn-dark btn-sm" asp-route-ID="@item"> <i class="bi bi-plus-circle"></i> Agregar Nódulo</a>
    </div>

    <div style="position: absolute; margin-left:750px; margin-top:-50px" id="BotonNodula">
        <a asp-action="VerNodulos" asp-controller="Plantas" class="btn btn-dark btn-sm" asp-route-ID="@item"><i class="bi bi-eye-fill"></i> Ver Nódulos</a>
    </div>
}

<br />

<hr />

<div class="boton text-center">
    <a href="javascript:history.back()" class="btn btn-dark btn-sm"> <i class="bi bi-arrow-return-left"></i> Regresar </a>
</div>





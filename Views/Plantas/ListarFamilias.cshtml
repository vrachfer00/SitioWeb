@model SitioWeb.Models.PlantasPorSubfamilia

@{
    ViewData["Title"] = "ListarFamilias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<h1 class="text-center" style="font-style:italic;"> @Html.DisplayFor(model => model.Subfamilia) </h1>


<!--Aquí va un ciclo para que se muestren cada una de las plantas de cada subfamilia-->
<div class="row row-cols-1 row-cols-sm-4 g-4">
    @foreach (var planta in Model.Plantas)
     {
        <div class="col">
            <div class="card">
                <a asp-action="InfoPlanta" asp-controller="Plantas" class="card-img-top" asp-route-ID="@planta.ID">
                    <img src="https://www.cannabismagazine.net/wp-content/uploads/2020/10/plantita-cannabis.jpg" class="card-img-top" alt="...">
                </a>
                    <div class="card-body">
                        <h5 class="card-title text-center" style="font-style:italic;"> @planta.NombreCientifico </h5>
                        <p class="card-text text-center"> @planta.NombreComun </p>
                    </div>
            </div>
        </div>
     }
</div>


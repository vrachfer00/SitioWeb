@model List<PlantasTotalModel>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <h5 class="card-header text-center"> Lista de hospederos </h5>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Plantas" class="btn btn-dark btn-sm"> <i class="bi bi-plus-circle"></i> Nuevo hospedero</a>
        <a asp-action="CerrarSesion" asp-controller="Plantas" class="btn btn-dark btn-sm float-right"> <i class="bi bi-box-arrow-right"></i> Cerrar Sesión</a>
        <br /> <br />

        <table class="table table-striped table-bordered table-sm">
            <thead>
                <tr>
                    <th scope="col" class="text-center">ID</th>
                    <th scope="col" class="text-center">Nombre científico</th>
                    <th scope="col" class="text-center">Subfamilia</th>
                    <th scope="col" class="text-center">Nodulación</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td class="text-center">@item.ID</td>
                        <td class="text-center"> <i>@item.NombreCientifico</i> </td>
                        <td class="text-center">@item.Subfamilia</td>
                        <td class="text-center">@item.Nodula</td>
                        <td class="text-center">
                            <a asp-action="Editar" asp-controller="Plantas" class="btn btn-light btn-sm" asp-route-ID="@item.ID"> <i class="bi bi-pencil-square"></i> Editar</a>
                            <a asp-action="Detalles" asp-controller="Plantas" class="btn btn-light btn-sm" asp-route-ID="@item.ID"> <i class="bi bi-eye-fill"></i> Detalles</a>
                            <a asp-action="Eliminar" asp-controller="Plantas" class="btn btn-danger btn-sm" asp-route-ID="@item.ID"> <i class="bi bi-trash"></i> Eliminar</a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>
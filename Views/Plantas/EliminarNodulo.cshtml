@model PlantasNodulan

@{
    ViewData["Title"] = "EliminarNodulo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h5 class="card-header">Eliminar nódulo</h5>
    <div class="card-body">

        <form asp-action="EliminarNodulo" asp-controller="Plantas" method="post">

            <input asp-for="IdNodulo" type="hidden" class="form-control">

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el registro del nódulo @Html.DisplayTextFor(m => m.IdNodulo)? <!--Ponerle cursiva al nombre científico-->
            </div>

            <div class="botones text-center">
                <a href="javascript:history.back()" class="btn btn-dark btn-sm"> <i class="bi bi-arrow-return-left"></i> Regresar </a>
                <button type="submit" class="btn btn-danger btn-sm"> <i class="bi bi-trash3-fill"></i> Eliminar</button>
            </div>

        </form>

    </div>
</div>


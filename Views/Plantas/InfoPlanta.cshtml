@model SitioWeb.Models.PlantasTotalModel

@{
    ViewData["Title"] = "InfoPlanta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
           
    </style>
</head>
<body>

    <br />
    <br />
    <h1 class="text-center" style="font-style:italic;"> @Html.DisplayFor(model => model.NombreCientifico) </h1>
    <br />

    @if (Model != null && !String.IsNullOrEmpty(Model.Imagen))
    {
        <div class="col text-center">
        <img src="@Html.DisplayFor(model => model.tipoImagen), @Html.DisplayFor(model => model.Imagen)" width="400" height="400" style="border: 8px solid #31A34D" alt="Foto de hospedero">
        </div>
    }
    else 
    {
        <div class="col text-center">
            <img src="https://denac-public.s3.amazonaws.com/assets/img/catalog/thumbnails/accesorios/iluminacion/cuartos/nissan/00418081r.png" width="400" height="400" alt="Sin Foto">
        </div>
    }


    <br />
    <br />

    <div style="text-align:center;">
        <table class="table table-borderless">
            <thead>
                <tr>
                    <th scope="col" style="font-size:20px;"> <i class="bi bi-flower3" style="font-size: 1.8rem; color: forestgreen;"></i>Tipo de hoja</th>
                    <th scope="col" style="font-size:20px;"> <i class="bi bi-flower3" style="font-size: 1.8rem; color: forestgreen;"></i>Morfología de hoja</th>
                    <th scope="col" style="font-size:20px;"> <i class="bi bi-flower3" style="font-size: 1.8rem; color: forestgreen;"></i>Color de flor</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="font-size: 17px;">@Html.DisplayFor(model => model.TipoHojas)</td>
                    <td style="font-size: 17px;">@Html.DisplayFor(model => model.MorfoHojas)</td>
                    <td style="font-size: 17px;">@Html.DisplayFor(model => model.ColorFlor)</td>
                </tr>
        </table><br /><br />

        <table class="table table-borderless">
            <thead>
                <tr>
                    <th scope="col" style="font-size:20px;"> <i class="bi bi-flower3" style="font-size: 1.8rem; color: forestgreen;"></i> Simbionte </th>
                    <th scope="col" style="font-size:20px;"> <i class="bi bi-flower3" style="font-size: 1.8rem; color: forestgreen;"></i> Color de raíz</th>
                    <th scope="col" style="font-size:20px;"> <i class="bi bi-flower3" style="font-size: 1.8rem; color: forestgreen;"></i>Nodulación</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="font-size:17px;">@Html.DisplayFor(model => model.Simbionte)</td>
                    <td style="font-size:17px;">@Html.DisplayFor(model => model.ColorRaiz)</td>
                    <td style="font-size:17px;">@Html.DisplayFor(model => model.Nodula)</td>
                </tr>
        </table><br />

    </div>

    <div>
        <!--Condicional para determinar si la planta nodula o no y mostrar la información de los nódulos-->
        @if (Model.Nodula == "Si")
        {
            <hr style="height:1px" color="#31A34D">
            <br />

            <h1 class="text-center"> Taxonomía de bacteria asociada </h1>
            <br />
            <br />

            <div style="text-align:center;">
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th scope="col" style="font-size:20px;"><i class="bi bi-flower3" style="font-size: 1.8rem; color: forestgreen;"></i>Filo</th>
                            <th scope="col" style="font-size:20px;"><i class="bi bi-flower3" style="font-size: 1.8rem; color: forestgreen;"></i>Género</th>
                            <th scope="col" style="font-size:20px;"><i class="bi bi-flower3" style="font-size: 1.8rem; color: forestgreen;"></i>Gram</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                </table><br /><br />
            </div>
        }
    </div>

    <div class="botones text-center">
        <a href="javascript:history.back()" class="btn btn-dark btn-sm"> <i class="bi bi-arrow-return-left"></i> Regresar </a>
    </div> 

</body>
</html>







